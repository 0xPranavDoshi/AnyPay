{
  "name": "ccip-starter-kit-hardhat",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:fork": "npx hardhat test --grep 'Fork'",
    "test:no-fork": "npx hardhat test --grep '^(?!.*Fork).*$'",
    "deploy:all": "npx hardhat run scripts/deploy-all-chains.js",
    "deploy:ethereum": "npx hardhat run scripts/deploy-payment-splitter.js --network ethereumSepolia",
    "deploy:arbitrum": "npx hardhat run scripts/deploy-payment-splitter.js --network arbitrumSepolia",
    "deploy:base": "npx hardhat run scripts/deploy-payment-splitter.js --network baseSepolia",
    "test:cross-chain": "npx hardhat run scripts/test-cross-chain-payments.js"
  },
  "devDependencies": {
    "@chainlink/contracts": "^1.4.0",
    "@chainlink/contracts-ccip": "^1.6.0",
    "@chainlink/env-enc": "^1.0.5",
    "@chainlink/local": "^0.2.5-beta",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@types/node": "^24.3.0",
    "hardhat": "^2.22.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.4",
    "ethers": "^6.15.0"
  }
}
