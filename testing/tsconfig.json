{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "hardhat"],
    "allowJs": true,
    "noEmit": true
  },
  "include": ["scripts/**/*", "test/**/*", "tasks/**/*", "hardhat.config.ts"],
  "exclude": ["node_modules", "dist", "typechain-types"]
}
